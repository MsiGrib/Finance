@using MudBlazor

<MudCard>
    <MudCardContent>
        <MudGrid>
            <!-- Изображение + название (и доп. название) -->
            <MudItem xs="12" sm="4">
                <MudStack Direction="Row" AlignItems="AlignItems.Center" Spacing="1">
                    <!-- Изображение размером 32x32, преобразованное из массива байт -->
                    <MudAvatar Src="@GetImageSrc()" Alt="Изображение" Style="width:32px; height:32px;" />
                    <MudStack>
                        <MudText Typo="Typo.h6">@Name</MudText>
                        @if (!string.IsNullOrEmpty(SubName))
                        {
                            <MudText Color="Color.Secondary">@SubName</MudText>
                        }
                    </MudStack>
                </MudStack>
            </MudItem>

            <!-- Цена -->
            <MudItem xs="12" sm="4">
                <MudText Typo="Typo.h6">Цена: @Price</MudText>
            </MudItem>

            <!-- Временной график -->
            <MudItem xs="12" sm="4">
                <MudChart ChartType="ChartType.Line" Data="@ChartData" Labels="@ChartLabels" />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>