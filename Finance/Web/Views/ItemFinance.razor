@using MudBlazor

<MudCard>
    <MudCardContent>
        <MudGrid>
            <!-- Название и дополнительное название -->
            <MudItem xs="12" sm="4">
                <MudText Typo="Typo.h6">@Name</MudText>
                @if (!string.IsNullOrEmpty(OptionalName))
                {
                    <MudText Color="Color.Secondary">@OptionalName</MudText>
                }
            </MudItem>

            <!-- Цена -->
            <MudItem xs="12" sm="4">
                <MudText Typo="Typo.h6">Цена: @Price</MudText>
            </MudItem>

            <!-- Временной график -->
            <MudItem xs="12" sm="4">
                <MudChart ChartType="ChartType.Line" Data="@ChartData" Labels="@ChartLabels" />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>