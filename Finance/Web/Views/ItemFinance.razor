@using MudBlazor
@using MudBlazor.Charts;


<MudCard Class="mb-4">
    <MudCardContent>
        <MudGrid>
            <MudItem xs="12" sm="3">
                @if (!string.IsNullOrEmpty(_imageBase64))
                {
                    <div style="width:64px; height:64px;">
                        <img src="@_imageBase64"
                             style="width:100%; height:100%; object-fit:contain;"
                             alt="@Name" />
                    </div>
                }
            </MudItem>

            <MudItem xs="12" sm="3">
                <MudText Typo="Typo.h6">@Name</MudText>
            </MudItem>

            <MudItem xs="12" sm="3">
                @if (!string.IsNullOrEmpty(SubName))
                {
                    <MudText Color="Color.Secondary">@SubName</MudText>
                }
            </MudItem>

            <MudItem xs="12" sm="3">
                <MudText Typo="Typo.h6" Class="ml-auto">@Price</MudText>
            </MudItem>

            <MudItem xs="12">
                <MudPaper Style="width:100%; position: relative;">
                    <MudChart ChartType="ChartType.Line"
                              ChartSeries="@_series"
                              @bind-SelectedIndex="_index"
                              XAxisLabels="@_xAxisLabels"
                              Width="100%" Height="400px"
                              ChartOptions="@_options"
                              AxisChartOptions="_axisChartOptions" />
                </MudPaper>
            </MudItem>

        </MudGrid>
    </MudCardContent>
</MudCard>
